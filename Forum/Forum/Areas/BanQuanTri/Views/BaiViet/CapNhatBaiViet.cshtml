@using Forum.Models;
@model BaiViet
@{
    ViewBag.Title = "Cập Nhật Bài Viết";
    Layout = "~/Areas/BanQuanTri/Views/Shared/_Layout.cshtml";
}
<div class="p-body">
    <div class="p-body-inner ">
        <!--XF:EXTRA_OUTPUT-->
        <div class="breadcrumb ">
            <div class="pageContent">
                <ul class="p-breadcrumbs " itemscope="" itemtype="https://schema.org/BreadcrumbList">
                    <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                        <a href="/BanQuanTri/Home/Index" itemprop="item">
                            <span itemprop="name">Trang Chủ</span>
                        </a>
                        <meta itemprop="position" content="1">
                    </li>
                    <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                        <a href="/BanQuanTri/ChuDe/BaiVietMoiTheoChuDe?iMaChuDe=@Model.MaChuDe" itemprop="item">
                            <span itemprop="name">@Model.ChuDe.TenChuDe</span>
                        </a>
                        <meta itemprop="position" content="2">
                    </li>
                    <li itemprop="itemListElement" itemscope="" itemtype="https://schema.org/ListItem">
                        <a itemprop="item">
                            <span itemprop="name">Cập Nhật Bài Viết</span>
                        </a>
                        <meta itemprop="position" content="3">
                    </li>
                </ul>
            </div>
        </div>
        <div uix_component="MainContainer" class="uix_contentWrapper">
            <div class="p-body-main  ">
                <div uix_component="MainContent" class="p-body-content">
                    <!-- ABOVE MAIN CONTENT -->
                    @using (Html.BeginForm("CapNhatBaiViet", "BaiViet", new { @iMaBaiViet=Model.MaBaiViet}))
                    {
                        @Html.AntiForgeryToken()
                        <input type="text" class="input" name="MaBaiViet" autofocus="autofocus" value="@Model.MaBaiViet" style="display:none">
                        <div class="p-body-pageContent">
                            <div class="blocks">
                                <input type="hidden" name="_xfToken" value="1644569066,ed7fe79af36674dd156ba5117bb51958">
                                <div class="block-container">
                                    <div style="text-align: right; background-color: #f9fafa; color: red; padding-right: 14px">
                                        <span>@ViewBag.ThongBao</span> &nbsp; &nbsp;
                                        <a href="/BanQuanTri/BaiViet/BaiViet?iMaBaiviet=@Model.MaBaiViet" style="margin-top:5px" class="button--padded button button--icon rippleButton rippleButton">Quay Lại</a>
                                    </div>
                                    <div class="block-body">
                                        <dl class="formRow formRow--input">
                                            <dt>
                                                <div class="formRow-labelWrapper">
                                                    <label class="formRow-label" for="_xfUid-1-1644569066">Tên Bài Viết</label>
                                                </div>
                                            </dt>
                                            <dd>
                                                <input type="text" class="input" name="TenBaiViet" value="@Model.TenBaiViet" autofocus="autofocus" required>
                                            </dd>
                                        </dl>
                                        <dl class="formRow formRow--input">
                                            <dt>
                                                <div class="formRow-labelWrapper">
                                                    <label class="formRow-label" for="_xfUid-1-1644569066">Nội Dung Bài Viết</label>
                                                </div>
                                            </dt>
                                            <dd>
                                                <textarea name="NoiDungBaiViet" id="NoiDungBaiViet">@Model.NoiDungBaiViet</textarea>
                                            </dd>
                                        </dl>
                                    </div>
                                    <dl class="formRow formSubmitRow">
                                        <dt></dt>
                                        <dd>
                                            <div class="formSubmitRow-main">
                                                <div class="formSubmitRow-bar"></div>
                                                <div class="formSubmitRow-controls">
                                                    <button type="submit" class="button--primary button  rippleButton">
                                                        <span class="button-text">Cập Nhật</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    CKEDITOR.replace("NoiDungBaiViet");
</script>